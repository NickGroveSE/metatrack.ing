---
import Layout from '../layouts/Layout.astro';
import GameButton from '../components/GameButton.vue';

import Logo from '../assets/wizard-hat-logo.svg';
import MTGLogo from '../assets/mtg-logo.svg';
import OWLogo from '../assets/ow-logo.svg';
import DLLogo from '../assets/dl-logo.svg';

const gameButtonData = [
  {
    logo: OWLogo.src,
    path: "/overwatch",
    name: "Overwatch",
    nameSecondLine: "",
    active: true
  },
  {
    logo: DLLogo.src,
    path: "/deadlock",
    name: "Deadlock",
    nameSecondLIne: "",
    active: true
  },
  {
    logo: MTGLogo.src,
    path: "/",
    name: "Magic: ",
    nameSecondLine: "The Gathering",
    active: false
  }
]
---

<Layout title="metatrack.ing" logo={Logo.src}>
  <main>
    {gameButtonData.map((game) => (
      <GameButton client:load 
        logo={game.logo} 
        path={game.path} 
        name={game.name} 
        namesl={game.nameSecondLine}
        active={game.active}
      />
    ))}
  </main>
</Layout>

<style>
  main {
    padding: 2rem;
    max-width: 800px;
    margin: 50px auto 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 100px;
  }

    /* Responsive styles */
  @media (max-width: 768px) {
    main {
      gap: 50px;
    }
  }

  @media (max-width: 480px) {
    main {
      grid-template-columns: 1fr;
    }
  }
  
  
</style>